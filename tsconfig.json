{
  "compilerOptions": {
    "target": "es2019",  // Updated for more modern JavaScript support, adjust based on your environment needs
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",  // This setting is good for React 17+ JSX transform
    "baseUrl": "./", // Helps with module resolution
    "paths": {  // Optional: Configure paths for absolute imports or specific path mappings
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [ // Optional: Exclude directories from the compilation process
    "node_modules",
    "build",
    "scripts",
    "webpack.config.js"
  ]
}
